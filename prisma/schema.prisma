generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name  String?
  email String  @unique
  hash  String

  roles Role[] @default([READER])

  permissions Permissions[]

  createdAt      DateTime         @default(now()) @db.Timestamptz(6)
  Empreendimento Empreendimento[]

  @@map("users")
}

enum Role {
  MASTER
  APPROVER // (Diretoria)
  CONTROLLER
  ENGINEER
  READER
}

model Permissions {
  id String @id @default(uuid())

  userId      String
  area        String
  permissions String[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("permissions")
}

model Empreendimento {
  id String @id @default(uuid())

  nome String
  cnpj String @unique

  engenheiroId String
  engenheiro   User   @relation(fields: [engenheiroId], references: [id])

  tipo String?

  cidade String
  uf     String

  entregaData DateTime?

  cheque     String?
  chequeData DateTime?

  @@map("empreendimentos")
}

model Ano {
  id    String @id @default(uuid())
  ano   Int    @unique // Ex: 2025
  meses Mes[]

  @@map("anos")
}

model Mes {
  id      String   @id @default(uuid())
  numero  Int // Ex: 8
  label   String // "Agosto"
  anoId   String
  ano     Ano      @relation(fields: [anoId], references: [id])
  semanas Semana[]

  @@map("meses")
}

model Semana {
  id     String @id @default(uuid())
  numero Int // Ex: 2
  label  String // "2Âª semana"
  mesId  String
  mes    Mes    @relation(fields: [mesId], references: [id])
  dias   Dia[]

  @@map("semanas")
}

model Dia {
  id       String   @id @default(uuid())
  numero   Int // Ex: 15
  data     DateTime
  semanaId String
  semana   Semana   @relation(fields: [semanaId], references: [id])

  @@map("dias")
}

model Incc {
  id String @id @default(uuid())

  mes Int
  ano Int

  incc Float

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([mes, ano])
  @@map("incc")
}
