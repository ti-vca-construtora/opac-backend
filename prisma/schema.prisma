generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name  String?
  email String  @unique
  hash  String

  isActive Boolean @default(true)

  roles Role[] @default([READER])

  permissions Permissions[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt

  aprovacao Aprovacao[]

  @@map("users")
}

enum Role {
  MASTER
  APPROVER // (Diretoria)
  CONTROLLER
  READER
}

model Permissions {
  id String @id @default(uuid())

  userId      String
  area        String
  permissions String[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("permissions")
}

model Empreendimento {
  id       String @id @default(uuid())
  idSienge String @unique

  nome String
  cnpj String @unique

  tipo String?

  cidade String
  uf     String

  entregaData DateTime?

  custoObra        Decimal  @db.Decimal(15, 2)
  custosAdicionais Decimal  @db.Decimal(15, 2)
  custoTerreno     Decimal  @db.Decimal(15, 2)
  chequeValor      Decimal  @db.Decimal(15, 2)
  chequeData       DateTime

  orcamentoExecutivo Decimal? @db.Decimal(15, 2)

  dataInicioObra DateTime?
  dataFimObra    DateTime?

  medicaoMensal MedicaoMensal[]
  aditivo       Aditivo[]
  Aprovacao     Aprovacao[]

  @@map("empreendimentos")
}

model Incc {
  id String @id @default(uuid())

  mes Int
  ano Int

  incc Float

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([mes, ano])
  @@map("incc")
}

model MedicaoMensal {
  id                 String  @id @default(uuid())
  idSienge           String
  totalDistorcoes    Decimal @db.Decimal(15, 2)
  totalCustoPorNivel Decimal @db.Decimal(15, 2)
  totalEstoque       Decimal @db.Decimal(15, 2)
  totalMedicoes      Decimal @db.Decimal(15, 2)
  custoIncorrido     Decimal @db.Decimal(15, 2)

  gasto              Decimal? @db.Decimal(15, 2) // Custo incorrido do mês (atual - anterior)
  incc               Float? // Percentual do INCC do mês
  totalGasto         Decimal? @db.Decimal(15, 2) // Custo incorrido acumulado
  aGastar            Decimal? @db.Decimal(15, 2) // Valor restante a gastar (antes do INCC)
  aditivo            Decimal? @db.Decimal(15, 2) // Valor de aditivos
  aGastarAtualizado  Decimal? @db.Decimal(15, 2) // Valor a gastar corrigido pelo INCC
  orcamentoCorrigido Decimal? @db.Decimal(15, 2) // Orçamento total corrigido
  evolucaoMes        Float? // Evolução percentual do mês
  evolucaoTotal      Float? // Evolução percentual acumulada
  baseCalculo        String?  @default("CHEQUE") // Base em que foi feito o cálculo (valor do cheque ou orçamento executivo)
  ampFisicoTotal     Float? // Evolução física total
  ampFisicoMes       Float? // Evolução física do mês
  locadora           Decimal? @db.Decimal(15, 2) // Custo de locadora
  usina              Decimal? @db.Decimal(15, 2) // Custo de usina

  empreendimentoId String
  empreendimento   Empreendimento @relation(fields: [empreendimentoId], references: [id])

  mes Int @default(1)
  ano Int @default(2999)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("medicao_mensal")
}

model Aprovacao {
  id String @id @default(uuid())

  type String // EXECUTIVO ou ADITIVO

  valor     Decimal @db.Decimal(15, 2)
  obs       String? // Observações
  anexoLink String? // URL do anexo

  approved Boolean @default(false)

  mes Int?
  ano Int?

  userId    String
  createdBy User   @relation(fields: [userId], references: [id])

  empreendimentoId String
  empreendimento   Empreendimento @relation(fields: [empreendimentoId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("aprovacoes")
}

model Aditivo {
  id String @id @default(uuid())

  aditivo   Decimal @db.Decimal(15, 2) // Valor do aditivo
  obs       String? // Observações
  anexoLink String? // URL do anexo

  mes Int
  ano Int

  empreendimento   Empreendimento @relation(fields: [empreendimentoId], references: [id])
  empreendimentoId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("aditivos")
}
