generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name  String?
  email String  @unique
  hash  String

  isActive Boolean @default(true)

  roles Role[] @default([READER])

  permissions Permissions[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt

  @@map("users")
}

enum Role {
  MASTER
  APPROVER // (Diretoria)
  CONTROLLER
  READER
}

model Permissions {
  id String @id @default(uuid())

  userId      String
  area        String
  permissions String[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("permissions")
}

model Empreendimento {
  id       String @id @default(uuid())
  idSienge Int    @unique

  nome String
  cnpj String @unique

  tipo String?

  cidade String
  uf     String

  entregaData DateTime?

  custoObra        Decimal  @db.Decimal(15, 2)
  custosAdicionais Decimal  @db.Decimal(15, 2)
  custoTerreno     Decimal  @db.Decimal(15, 2)
  chequeValor      Decimal  @db.Decimal(15, 2)
  chequeData       DateTime

  orcamentoExecutivo Decimal? @db.Decimal(15, 2)

  dataInicioObra DateTime?
  dataFimObra    DateTime?

  medicaoMensal MedicaoMensal[]

  @@map("empreendimentos")
}

model Incc {
  id String @id @default(uuid())

  mes Int
  ano Int

  incc Float

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([mes, ano])
  @@map("incc")
}

model MedicaoMensal {
  id       String @id @default(uuid())
  idSienge Int

  totalDistorcoes    Decimal @db.Decimal(15, 2)
  totalCustoPorNivel Decimal @db.Decimal(15, 2)
  totalEstoque       Decimal @db.Decimal(15, 2)
  totalMedicoes      Decimal @db.Decimal(15, 2)
  custoIncorrido     Decimal @db.Decimal(15, 2)

  empreendimentoId String
  empreendimento   Empreendimento @relation(fields: [empreendimentoId], references: [id])

  mes Int @default(1)
  ano Int @default(2999)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("medicao_mensal")
}
