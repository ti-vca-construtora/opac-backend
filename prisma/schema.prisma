generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name  String?
  email String  @unique
  hash  String

  roles Role[] @default([READER])

  permissions Permissions[]

  createdAt      DateTime         @default(now()) @db.Timestamptz(6)
  Empreendimento Empreendimento[]

  @@map("users")
}

enum Role {
  MASTER
  APPROVER // (Diretoria)
  CONTROLLER
  ENGINEER
  READER
}

model Permissions {
  id String @id @default(uuid())

  userId      String
  area        String
  permissions String[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("permissions")
}

model Empreendimento {
  id String @id @default(uuid())

  nome String
  cnpj String @unique

  engenheiroId String
  engenheiro   User   @relation(fields: [engenheiroId], references: [id])

  tipo String?

  cidade String
  uf     String

  entregaData DateTime?

  cheque     String?
  chequeData String?

  @@map("empreendimentos")
}

model Incc {
  id String @id @default(uuid())

  mes Int
  ano Int

  incc Float

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([mes, ano])
  @@map("incc")
}
